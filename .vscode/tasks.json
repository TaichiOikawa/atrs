{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Docker Compose",
            "type": "shell",
            "command": "cd ${workspaceFolder}/.develop && docker-compose up -d",
            "runOptions": {
                "runOn": "folderOpen"
            },
        },
        {
            "label": "Run Backend",
            "type": "shell",
            "command": "npm run dev",
            "dependsOn": "Run Docker Compose",
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Run Frontend",
            "type": "shell",
            "command": "cd ${workspaceFolder}/frontend && npm run dev",
            "dependsOn": "Run Docker Compose",
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}